{
  "arrowParens": "avoid",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "endOfLine": "crlf",
  "htmlWhitespaceSensitivity": "strict",
  "plugins": ["@prettier/plugin-php"],
  "tabWidth": 4,
  "useTabs": false,
  "printWidth": 100,
  "singleQuote": true,
  "semi": true,
  "overrides": [
    {
      "files": ["*.php", "*.module", "*.inc"],
      "options": {
        "parser": "php"
      }
    },
    {
      "files": ["*.css", "*.json", "*.jsonc", ".prettierrc"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
